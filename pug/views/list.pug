doctype html
html(lang='en')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title
    style(type='text/css').
  body(style='margin:0; padding:0; background-color:#F2F2F2;')
    p List of Products:
    if productList == undefined
        p No hay Productos        
    else 
        center
        table(width='100%', cellspacing='0', cellpadding='0', border='0', bgcolor='#F2F2F2')
            thead
                tr
                th Title
                th Price
                th Thumbnail
            tbody
            each product in productList
                tr
                    td #{product.title}
                    td #{product.price}                
                    td <img src=#{product.thumbnail}>
<input type="button" onclick="window.location.href = 'http://localhost:8080/';" value="Go To Create Product"/>
